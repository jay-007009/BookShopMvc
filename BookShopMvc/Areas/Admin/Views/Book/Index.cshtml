@model IEnumerable<BookShop.Data.DbModel.BookImage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMaster.cshtml";
}

<h1>Index</h1>

<p>
